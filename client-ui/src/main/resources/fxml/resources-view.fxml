<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ResourcesController"
            prefWidth="600" prefHeight="400">

    <children>

        <Label text="Resources"
               layoutX="30" layoutY="20"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <ListView fx:id="resourceList"
                  layoutX="30" layoutY="70"
                  prefWidth="400" prefHeight="250"/>

        <Button text="Add"
                layoutX="450" layoutY="70"
                prefWidth="120"
                onAction="#onAddResource"/>

        <Button text="Open"
                layoutX="450" layoutY="120"
                prefWidth="120"
                onAction="#onOpenResource"/>

        <Button text="Back"
                layoutX="450" layoutY="170"
                prefWidth="120"
                onAction="#onBack"/>

    </children>

</AnchorPane>
