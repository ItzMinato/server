<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.TaskDetailsController"
            prefWidth="600" prefHeight="400">

    <children>

        <Label text="Task Details"
               layoutX="30" layoutY="20"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <Label text="Title:" layoutX="30" layoutY="80"/>
        <Label fx:id="titleLabel" layoutX="150" layoutY="80"/>

        <Label text="Description:" layoutX="30" layoutY="120"/>
        <Label fx:id="descriptionLabel" layoutX="150" layoutY="120"/>

        <Label text="Status:" layoutX="30" layoutY="160"/>
        <Label fx:id="statusLabel" layoutX="150" layoutY="160"/>

        <Label text="Deadline:" layoutX="30" layoutY="200"/>
        <Label fx:id="deadlineLabel" layoutX="150" layoutY="200"/>

        <!-- КНОПКИ СТАТУСУ -->
        <Button text="Set OPEN"
                layoutX="400" layoutY="120"
                onAction="#onSetOpen"/>

        <Button text="Set IN PROGRESS"
                layoutX="400" layoutY="160"
                prefWidth="150"
                onAction="#onSetInProgress"/>

        <Button text="Set DONE"
                layoutX="400" layoutY="200"
                prefWidth="150"
                onAction="#onSetDone"/>

        <Button text="Back"
                layoutX="400" layoutY="260"
                prefWidth="150"
                onAction="#onBack"/>

    </children>
</AnchorPane>
