<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.CreateTaskController"
            prefWidth="400" prefHeight="250">

    <children>
        <Label text="Create Task"
               layoutX="140" layoutY="20"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label text="Title:"
               layoutX="40" layoutY="70"/>
        <TextField fx:id="titleField"
                   layoutX="120" layoutY="65"
                   prefWidth="220"/>

        <Label text="Description:"
               layoutX="40" layoutY="110"/>
        <TextField fx:id="descField"
                   layoutX="120" layoutY="105"
                   prefWidth="220"/>

        <Button text="Create"
                layoutX="120" layoutY="160"
                prefWidth="90"
                onAction="#onCreate"/>

        <Button text="Back"
                layoutX="250" layoutY="160"
                prefWidth="90"
                onAction="#onBack"/>
    </children>

</AnchorPane>
