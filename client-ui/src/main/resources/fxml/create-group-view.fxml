<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400" prefHeight="250"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.CreateGroupController">

    <children>

        <Label text="Create Group"
               layoutX="130" layoutY="20"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="Group name:" layoutX="40" layoutY="90"/>
        <TextField fx:id="nameField" layoutX="140" layoutY="85" prefWidth="200"/>

        <Button text="Create"
                layoutX="140" layoutY="150" prefWidth="80"
                onAction="#onCreate"/>

        <Button text="Back"
                layoutX="230" layoutY="150" prefWidth="80"
                onAction="#onBack"/>

    </children>

</AnchorPane>
